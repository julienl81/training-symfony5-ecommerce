{% extends 'base.html.twig' %}

{% block title %}Valider ma commande | La Boutique Française{% endblock %}

{% block content %}
    <h2>Je passe ma commande</h2>
    <p>Selectionnez vos options de commandes</p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            {% set formHtml %}
                {{ form_start(form, {action:path('app_order_recap')}) }}
                    {{ form_label(form.adresses, 'Choisissez votre adresse de livraison')}}
                    <a href="{{path('app_account_address_add')}}">Ajouter une adresse</a>
                {{ form_end(form) }}
            {% endset %}
            {{ formHtml|replace({'[br]' : '<br/>'})|raw }}
        </div>
        
        <div class="col-md-6">
            <div class="text-center">
                <b>Récap de ma commande</b><br>
                <p>Retrouver ici le récapitulatif de votre commande</p>
            </div>
            <div class="order-summary">
                {% for key,product in cart %}
                    <div class="row {% if key > 0%}mt-2{% endif %}">
                        <div class="col-2"><img src="/uploads/{{product.product.illustration}}" alt="{{ product.product.name }}" height="75px"></div>
                        <div class="col-8 my-auto">
                            {{ product.product.name }}<br/>
                            <small>{{ product.product.subtitle }}</small>
                        </div>
                        <div class="col-2 my-auto">x {{ product.quantity}}</div>
                    </div>       
                {% endfor %}       
            </div>
        </div>
    </div>
{% endblock %}
